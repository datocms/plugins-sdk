{
  "name": "datocms-react-ui",
  "version": "0.3.0",
  "description": "React components to use inside DatoCMS plugins",
  "keywords": [
    "datocms",
    "plugin",
    "sdk"
  ],
  "author": "Stefano Verna <s.verna@datocms.com>",
  "homepage": "https://github.com/datocms/plugins-sdk/tree/master/packages/react-ui#readme",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/types/index.d.ts",
  "sideEffects": false,
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist",
    "styles.css",
    "types.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datocms/plugins-sdk.git"
  },
  "scripts": {
    "build": "npm run generate-cssmodules && tsc && tsc --project ./tsconfig.esnext.json && npm run generate-typedoc && npm run generate-global-styles",
    "generate-cssmodules": "NODE_ENV=prebuild postcss src/**/*.css --base src --dir tmp",
    "generate-global-styles": "cp src/global.css tmp/global.css && NODE_ENV=production postcss tmp/global.css --output styles.css && rm -rf tmp",
    "generate-typedoc": "typedoc src/index.ts --json types.json",
    "prebuild": "rimraf dist"
  },
  "bugs": {
    "url": "https://github.com/datocms/plugins-sdk/issues"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "datocms-plugin-sdk": "^0.3.0"
  },
  "peerDependencies": {
    "react": ">= 17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "cssnano": "^5.0.11",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "postcss-modules": "^4.2.2",
    "postcss-nested": "^5.0.6",
    "typedoc": "^0.22.8"
  },
  "gitHead": "b12cac5d076b2c49a48db8bcc4895443f84a7b56"
}
